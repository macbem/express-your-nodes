<main>
  <div class="hero">
    <h1>Add a new quote</h1>
    <form action="/quotes" method="POST">
      <div>
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="quote" name="quote">
        <button type="submit">Submit</button>
      </div>
    </form>
    <a href="#quotes-container" class="arrow-down"></a>
  </div>
</main>
{{#if quote}}
<div class="quotes-container" id="quotes-container">
  <div class="container">
    <h2>Quotes</h2>
    <div class="row">
      {{#each quote}}
        <div class="col-md-6">
          <blockquote class="blockquote">
            <p>{{content}}</p>
            <footer class="blockquote-footer">{{author}}</footer>
            <p><a href="/quotes/{{id}}"><small>Edytuj</small></a></p>
          </blockquote>
        </div>
      {{/each}}
    </div>
  </div>
</div>
{{/if}}
<script type="text/javascript" src="/js/quotes.js"></script>